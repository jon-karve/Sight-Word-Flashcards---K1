<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WFLevel1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonFind5"
            android:layout_width="352dp"
            android:layout_height="229dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="96dp"
            android:text="Button"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonFind3" />

        <Button
            android:id="@+id/buttonFind6"
            android:layout_width="352dp"
            android:layout_height="229dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="32dp"
            android:text="Button"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonFind4" />

        <Button
            android:id="@+id/buttonFind3"
            android:layout_width="352dp"
            android:layout_height="229dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="76dp"
            android:text="Button"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonFind1" />

        <Button
            android:id="@+id/buttonFind4"
            android:layout_width="352dp"
            android:layout_height="229dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="32dp"
            android:text="Button"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonFind2" />

        <Button
            android:id="@+id/buttonFind1"
            android:layout_width="352dp"
            android:layout_height="229dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="70dp"
            android:text="Button"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonFind2"
            android:layout_width="352dp"
            android:layout_height="229dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="32dp"
            android:text="Button"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonHint"
            android:layout_width="205dp"
            android:layout_height="89dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="72dp"
            android:backgroundTint="#41E000"
            android:text="@string/question"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonFind5" />

        <TextView
            android:id="@+id/textScore"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="52dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="96sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonFind6" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="138dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="8dp"
            android:text="Score"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toStartOf="@+id/textScore"
            app:layout_constraintTop_toBottomOf="@+id/buttonFind6" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>