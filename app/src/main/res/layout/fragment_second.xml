<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mullica"
    android:backgroundTint="#7C7C7C"
    android:backgroundTintMode="multiply"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#F69E0000"
        android:backgroundTintMode="src_atop">

        <Button
            android:id="@+id/buttonCard"
            android:layout_width="462dp"
            android:layout_height="259dp"
            android:layout_marginTop="184dp"
            android:fontFamily="@font/comic_neue_bold"
            android:text="can"
            android:textSize="96sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <Button
            android:id="@+id/buttonMedium"
            android:layout_width="194dp"
            android:layout_height="86dp"
            android:layout_marginTop="228dp"
            android:backgroundTint="#F8650A"
            android:text="Medium"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/buttonHard"
            app:layout_constraintStart_toEndOf="@+id/buttonEasy"
            app:layout_constraintTop_toBottomOf="@+id/buttonCard" />

        <Button
            android:id="@+id/buttonEasy"
            android:layout_width="194dp"
            android:layout_height="86dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="228dp"
            android:backgroundTint="#00B307"
            android:text="Easy"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCard" />

        <Button
            android:id="@+id/buttonHard"
            android:layout_width="194dp"
            android:layout_height="86dp"
            android:layout_marginTop="228dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#FF0000"
            android:text="Hard"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCard" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>